{
  "name": "iris",
  "version": "0.0.1",
  "description": "IRIS Framework",
  "main": "babel.server.js",
  "scripts": {
    "clean": "rm -rf static/dist",
    "start": "NODE_PATH=\"./src\" node ./babel.server",
    "build": "node ./node_modules/webpack/bin/webpack.js --verbose --colors --progress --display-error-details --config webpack.config.prod.js",
    "nodecheckversion": "node ./scripts/nodecheckversion.js",
    "preinstall": "npm run nodecheckversion",
    "postinstall": "webpack -p --config ./webpack.config.prod.js",
    "watch:client": "node ./node_modules/webpack/bin/webpack.js --verbose --colors --display-error-details --config webpack.config.dev.js && node ./node_modules/webpack-dev-server/bin/webpack-dev-server.js --config webpack.config.dev.js",
    "dev": "npm run clean && node ./node_modules/concurrently/src/main.js --kill-others \"npm run watch:client\" \"npm run start\"",
    "lint": "semistandard --verbose | snazzy",
    "lint:staged": "git diff --name-only --staged --diff-filter=ACMTUXB --relative | grep -E '.jsx?$' | xargs semistandard --verbose | snazzy",
    "test": "npm run lint"
  },
  "author": "Edenspiekermann",
  "license": "ISC",
  "dependencies": {
    "ascii-json": "^0.2.0",
    "babel-core": "^6.10.4",
    "babel-loader": "^6.2.4",
    "babel-register": "^6.9.0",
    "good": "^7.0.1",
    "good-console": "^6.1.2",
    "hapi": "^13.5.0",
    "json-loader": "^0.5.4",
    "piping": "^0.3.2",
    "react": "^15.2.0",
    "react-dom": "^15.2.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.5.2",
    "redux": "^3.5.2",
    "webpack": "^1.13.1"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-typecheck": "^3.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "concurrently": "^2.2.0",
    "pre-commit": "^1.1.3",
    "react-hot-loader": "^1.3.0",
    "semistandard": "^8.0.0",
    "snazzy": "^4.0.0",
    "webpack-dev-server": "^1.14.1"
  },
  "pre-commit": {
    "run": "lint:staged",
    "colors": true,
    "silent": true
  },
  "semistandard": {
    "parser": "babel-eslint",
    "ignore": [
      "babel.server.js"
    ]
  },
  "engines": {
    "node": ">=4.0.0"
  }
}
