{
  "name": "iris",
  "version": "0.0.1",
  "description": "IRIS Framework",
  "main": "babel.server.js",
  "repository": "https://github.com/iris-dni/iris-frontend",
  "scripts": {
    "clean": "rm -rf static/dist",
    "nodecheckversion": "node ./scripts/node-checkversion.js",
    "preinstall": "npm run nodecheckversion",
    "postinstall": "npm run build",
    "server": "NODE_PATH=\"./src\" node ./babel.server",
    "server:dev": "webpack-dev-server --config webpack.config.dev.js",
    "lint": "npm run lint:js && npm run lint:scss",
    "lint:js": "semistandard --verbose | snazzy",
    "lint:scss": "scss-lint",
    "lint:staged": "lint-staged",
    "copy:html": "node ./scripts/copy-html.js",
    "copy:assets": "node ./scripts/copy-assets.js",
    "copy:theme": "node ./scripts/copy-theme.js",
    "copy": "npm run copy:html && npm run copy:assets && npm run copy:theme",
    "start": "npm run server",
    "dev": "npm run clean && npm run build && concurrently --kill-others \"npm run server:dev\" \"npm run server\"",
    "build": "npm run copy && webpack --verbose --colors --progress --display-error-details --config webpack.config.prod.js",
    "test": "npm run copy && mocha-webpack --webpack-config webpack.config.test.js",
    "test:watch": "npm run copy && mocha-webpack --webpack-config webpack.config.test.js --watch"
  },
  "author": "Edenspiekermann",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^6.3.7",
    "ascii-json": "^0.2.0",
    "axios": "^0.13.1",
    "babel-core": "^6.10.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "css-loader": "^0.23.1",
    "css-modules-require-hook": "^4.0.1",
    "dotenv": "^2.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "fs-extra": "^0.30.0",
    "good": "^7.0.1",
    "good-console": "^6.1.2",
    "hapi": "^13.5.0",
    "inert": "^4.0.1",
    "inject-then": "^2.0.5",
    "json-loader": "^0.5.4",
    "nunjucks-hapi": "^2.1.0",
    "piping": "^0.3.2",
    "postcss-loader": "^0.9.1",
    "react": "^15.2.0",
    "react-dom": "^15.2.0",
    "react-helmet": "^3.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.5.2",
    "react-router-redux": "^4.0.5",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "url-pattern": "^1.0.1",
    "vision": "^4.1.0",
    "webpack": "^1.13.1"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.0",
    "babel-plugin-typecheck": "^3.9.0",
    "chai": "^3.5.0",
    "concurrently": "^2.2.0",
    "enzyme": "^2.4.1",
    "lint-staged": "^2.0.2",
    "mocha": "^2.5.3",
    "mocha-webpack": "^0.4.0",
    "pre-commit": "^1.1.3",
    "react-addons-test-utils": "^15.2.1",
    "react-hot-loader": "^1.3.0",
    "redux-devtools": "^3.3.1",
    "semistandard": "^8.0.0",
    "sinon": "^1.17.4",
    "snazzy": "^4.0.0",
    "webpack-dev-server": "^1.14.1",
    "webpack-node-externals": "^1.2.0"
  },
  "lint-staged": {
    "*.@(js|jsx)": "lint:js",
    "*.@(scss|css)": "lint:scss"
  },
  "pre-commit": {
    "run": "lint:staged",
    "colors": true,
    "silent": true
  },
  "semistandard": {
    "parser": "babel-eslint",
    "ignore": [
      "babel.server.js",
      "src/assets/**"
    ],
    "globals": [
      "describe",
      "context",
      "it"
    ]
  },
  "engines": {
    "node": ">=4.0.0"
  }
}
